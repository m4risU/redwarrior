<!DOCTYPE html>
<html>
<head>
  <title>Redwarrior</title>

  <%= stylesheet_link_tag "blog_engine/application", :media => "all" %>
  <%= javascript_include_tag "blog_engine/application" %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body class="blog_engine_body">

<div class="navbar navbar-fixed-top">
  <div id="brand-slogan">
    <%= link_to root_path, :id => 'brand' do%>
      <span class="red">Red</span>Warrior <small> Blog </small>
    <% end %>
    <span id="slogan">apps, websites and startups</span>
  </div>
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <ul class="nav" id="main-menu">
        <li><%= link_to "back to Red Warrior", '/' %></li>
      </ul>

      <%#= render "layouts/shared/horizontal_menu" %>
      <!--/.nav-collapse -->
    </div>
  </div>
</div>


<div class="container">

  <%- flash.each do |k, v| %>
    <div class="alert alert-<%= k %> alert-block">
      <strong> <%= k %>s: </strong>
      <ul>
        <% if v.kind_of?(Array) %>
          <% v.each do |text| %>
            <li> <%= text %> </li>
          <% end %>
        <% else %>
          <li> <%= v %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span9">
      <%= yield %>
    </div>
    <div class="span3">
      <%= render :partial => 'layouts/blog_engine/side_bar' %>
    </div>

  </div>

</div>

</body>
</html>